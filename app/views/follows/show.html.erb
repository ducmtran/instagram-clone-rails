<div class="container">
  <%= link_to view_profile_path(current_user.id), method: :get do %>
    <div class="btn btn-sm btn-secondary">Back to profile</div>
  <% end %>
  <div>Following</div>
  <div class="list-group">
    <% @followings.each do |f| %>
      <li class="list-group-item">
          <%= f.email %>
          <%= link_to unfollow_path(f.id), method: :delete do %>
            <div>Unfollow</div>
          <% end %>
      </li>
    <% end %>
  </div>
  <div>Followers</div>
  <div class="list-group">
    <% @followers.each do |f| %>
      <li class="list-group-item">
          <%= f.email %>
      </li>
    <% end %>
  </div>
  <br>
  <div>All users</div>
  <div class="list-group">
    <% @all_users.each do |user| %>
      <li class="list-group-item">
        <%= link_to view_profile_path(user.id), method: :get do %>
          <div><%= user.profile.name %></div>
        <% end %>
        <%= link_to follow_path(user.id), method: :post do %>
          <div class="btn btn-sm btn-secondary">Follow</div>
        <% end %>
      </li>
    <% end %>
  </div>
</div>