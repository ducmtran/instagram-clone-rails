<div class="container d-flex flex-column align-items-center">
    <h1 id="welcome-title">Welcome to instagram</h1>
    <%= link_to :about, url: about_path do %>
        <h2>About</h2>
    <% end %>
    <div id="signin-form">
        <%= form_for :sign_in, url: signin_path, html: {class: 'form-signin'} do |f| %>
            <%= f.text_field :username, class: 'form-control', placeholder: :p %> <br>
            <%= f.password_field :password, class: 'form-control', placeholder: :p %> <br>
            <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
        <% end %>
    </div>
</div>